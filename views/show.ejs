<% layout('layout/boilerplate') %>
<section class="show">
  <% for(let movie of moviefetch){ %> <% if(movie.id === parseInt(id)) {%>
  <div class="show-movies" href="/movies">
    <img
      src="https://image.tmdb.org/t/p/w1280/<%=(movie.backdrop_path)?movie.backdrop_path:movie.poster_path%>"
      alt="<%=movie.title%> Poster"
    />
    <div class="show-movie-info">
      <h2><%=movie.original_title%></h2>
      <span>Rating : <%=movie.vote_average%></span>
      <p>Language : <%=movie.original_language%></p>
      <p>Discription : <%=movie.overview%></p>
    </div>
  </div>
  <% } %> <% } %>
</section>
